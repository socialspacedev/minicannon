#!/bin/bash

npx -y pagefind --site public

# Check if the variable equals "production"
if [ "$ELEVENTY_ENV" = "production" ]; then
#  npx jampack public
  html-minifier --collapse-whitespace --remove-commeremove-optional-tags --remove-redundant-attributes --remove-script-type-attributes --remove-tag-whitespace --use-short-doctype --file-ext html --input-dir ./public -output-dir ./public
else
  echo "The variable is not equal to 'production'."
fi

