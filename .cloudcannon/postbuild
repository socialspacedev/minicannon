#!/bin/bash

npx -y pagefind --site public
npx @bookshop/generate

# Check if the variable equals "production"
if [ "$ELEVENTY_ENV" = "production" ]; then
  echo "The variable is equal to 'production'."
  html-minifier --collapse-whitespace --remove-comments --remove-optional-tags --remove-redundant-attributes --remove-script-type-attributes --remove-tag-whitespace --use-short-doctype
else
  echo "The variable is not equal to 'production'."
fi

# ELEVENTY_ENV=production html-minifier --collapse-whitespace --remove-comments --remove-optional-tags --remove-redundant-attributes --remove-script-type-attributes --remove-tag-whitespace --use-short-doctype