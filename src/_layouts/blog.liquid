---
title: "Blog"
description: "Here are my posts"
keyword: "test"
type: "website"
pagination:
  data: collections.post
  size: 7
  alias: posts
  reverse: true
  permalink: "split/page-{{ pagination.pageNumber | plus: 1 }}/index.html"
---

<!DOCTYPE html>
<html lang="en">
  {% include "head-website.liquid" %}
  <!-- Start Body -->
  <body>
    {% include "nav.liquid" %}
      <main>
        {{ content }}
        <ul class="list-posts">
          {%- for post in posts -%}
            <li class="posts">
              <h2>
                <a href="{{ post.url }}">{{ post.data.title }}</a>
              </h2>
              <p>{{ post.data.description }}</p>
              <small class="info">
                <time datetime="{{ post.date }}">{{ post.date | readableDate }}</time>&nbsp;&nbsp;&ndash;&nbsp;
                {{ post.content | timeToRead }}&nbsp;to&nbsp;read
              </small>
            </li>
          {%- endfor -%}
        </ul>
      </main>

    
{% assign mostRecent = collections.posts | first %}
<div class="most-recent-post">
  <h3>Most Recent Post: <a href="{{ mostRecent.url }}">{{ mostRecent.data.title }}</a></h3>
  <p>{{ mostRecent.data.date | date: "%B %d, %Y" }}</p>
</div>
    
    <!-- Pagination links -->
    <paginate>
      {% if pagination.pageLinks.length > 1 %}
            <ul class="paginate">
            {% if pagination.previousPageLink %}
              <li><a href="{{ pagination.previousPageHref }}">&lt; Previous</a></li>
              {% else %}<li>&nbsp;</li>
            {% endif %}
            {% if pagination.nextPageLink %}
              <li><a href="{{ pagination.nextPageHref }}">Next &gt;</a></li>
              {% else %}<li>&nbsp;</li>
            {% endif %}
          </ul>
      {% endif %}
    </paginate>
    {% include "footer.liquid" %}
  </body>
<!-- End Body -->
</html>