title: "Blog article"
description: "Description of a blog article"
tags: "post"
date: "Created"
published: "false"
type: "article"
---

<!DOCTYPE html>
<html lang="en">
{% include "head-article.liquid" %}
<!-- Start Body -->
<body>
    {% include "nav.liquid" %}
    <article data-pagefind-body>
        <small class="info">
            Posted&nbsp;
            <time datetime="{{ page.date }}">{{ page.date | readableDate }}</time>&nbsp;&ndash;&nbsp;
            {{ content | timeToRead }}&nbsp;to&nbsp;read
        </small>
        <h1>{{ title }}</h1>
        <div class="content">
        {{ content }}
        </div>
         <!-- Pagination links -->
   <!--     {% if collections.posts.length > 1 %} -->
          {% assign previousPost = collections.posts | getPreviousCollectionItem %}
          {% assign nextPost = collections.posts | getNextCollectionItem %}
          {% if nextPost or previousPost %}
            <ul class="paginate">
              {% if previousPost %}
                <li class="left"><a href="{{ previousPost.url }}">>&lt; Previous</a></li>
              {% endif %}
              {% if nextPost %}
                <li class="right"><a href="{{ nextPost.url }}">Next &gt;</a></li>
              {% endif %}
            </ul>
          {% endif %}
  <!--      {% endif %} -->
        {% bookshop_include "page" content_blocks: content_blocks %}
    </article>
    {% include "footer.liquid" %}
</body>
<!-- End Body -->
</html>