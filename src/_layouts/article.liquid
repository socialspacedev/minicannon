<!DOCTYPE html>
<html lang="en">
{% include "head-article.liquid" %}
<!-- Start Body -->
<body>
    {% include "nav.liquid" %}
    <article data-pagefind-body>
        <small class="info">
            Posted&nbsp;
            <time datetime="{{ page.date }}">{{ page.date | readableDate }}</time>&nbsp;&ndash;&nbsp;
            {{ content | timeToRead }}&nbsp;to&nbsp;read
        </small>
        <h1>{{ title }}</h1>
        <div class="content">
        {{ content }}
        </div>
         <!-- Pagination links -->
          <ul class="paginate">
            {% if pagination.previousPageLink %}
              <li class="left"><a href="{{ pagination.previousPageHref }}">&lt; Previous</a></li>
            {% endif %}
            {% if pagination.nextPageLink %}
              <li class="right"><a href="{{ pagination.nextPageHref }}">Next &gt;</a></li>
            {% endif %}
          </ul>
        {% bookshop_include "page" content_blocks: content_blocks %}
    </article>
    {% include "footer.liquid" %}
</body>
<!-- End Body -->
</html>