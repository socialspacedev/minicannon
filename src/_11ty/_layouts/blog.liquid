---
title: "Blog"
description: "Here are my posts"
keyword: "test"
type: "website"
pagination:
  data: collections.post
  size: 5
  alias: posts
  reverse: true
  permalink: "split/page-{{ pagination.pageNumber | plus: 1 }}/index.html"
---

<!DOCTYPE html>
<html lang="en">
  {% include "head-website.liquid" %}
  <!-- Start Body -->
  <body>
    {% include "nav.liquid" %}
      <main>
      {{ content }}
      <ul class="elenco-posts">
        {%- for post in posts -%}
          <li class="posts">
            <h2>
              <a href="{{ post.url }}">{{ post.data.title }}</a>
            </h2>
            <p>{{ post.data.description }}</p>
            <small class="info">
              <time datetime="{{ post.date }}">{{ post.date | readableDate }}</time>&nbsp;&nbsp;&ndash;&nbsp;
              {{ post.content | timeToRead }}&nbsp;to&nbsp;read
            </small>
          </li>
        {%- endfor -%}
      </ul>
  <!-- Pagination links -->
      {% if pagination.pageLinks.length > 1 %}
          <nav class="paginate">
            {% if pagination.previousPageLink %}
              <a href="{{ pagination.previousPageHref }}">Old</a>
         <!--   {% else %} -->
          <!--    <span>First</span> -->
            {% endif %}
            &nbsp;
            <span>
              {{ pagination.pageNumber | plus: 1 }} of {{ pagination.links | size }}
            </span>
            {% if pagination.nextPageLink %}
              <a href="{{ pagination.nextPageHref}}">New</a>
          <!--  {% else %} -->
          <!--    <span>Last</span> -->
            {% endif %}
          </nav>
      {% endif %}
    </main>
    {% include "footer.liquid" %}
  </body>
<!-- End Body -->
</html>