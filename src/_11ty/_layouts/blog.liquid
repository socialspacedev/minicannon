---
title: "Blog"
description: "Here are my posts"
keyword: "test"
type: "website"
pagination:
  data: collections.post
  size: 5
  alias: posts
  reverse: true
  permalink: "split/page-{{ pagination.pageNumber | plus: 1 }}/index.html"
---

<!DOCTYPE html>
<html lang="en">
  {% include "head-website.liquid" %}
  <!-- Start Body -->
  <body>
    {% include "nav.liquid" %}
      <main>
      {{ content }}
      <ul class="elenco-posts">
        {%- for post in posts -%}
          <li class="posts">
            <h2>
              <a href="{{ post.url }}">{{ post.data.title }}</a>
            </h2>
            <p>{{ post.data.description }}</p>
            <small class="info">
              <time datetime="{{ post.date }}">{{ post.date | readableDate }}</time>&nbsp;&nbsp;&ndash;&nbsp;
              {{ post.content | timeToRead }}&nbsp;to&nbsp;read
            </small>
          </li>
        {%- endfor -%}
      </ul>
  <!-- Pagination links -->
      {% if pagination.pageLinks.length > 1 %}
          <paginate>
            <ul>
            {% if pagination.previousPageLink %}
              <li><a href="{{ pagination.previousPageHref }}">\<<Previous</a></li>
            {% else %}
              <li><span>First</span></li>
            {% endif %}
            &nbsp;
            {% if pagination.nextPageLink %}
              <li><a href="{{ pagination.nextPageHref }}">Next\>></a></li>
            {% else %}
              <li><span>Last</span></li>
            {% endif %}
          </paginate>
          </ul>
      {% endif %}
    </main>
    {% include "footer.liquid" %}
  </body>
<!-- End Body -->
</html>