<!-- Titolo Automatizzato -->
{% assign pageTitle = title | default: '' -%}{% assign pageTitle = pageTitle | append: ' - ' | append: meta.siteName -%}

<!-- Descrizione Automatizzata -->
{% assign pageDescription = description | default: '' -%}{% assign pageDescription = pageDescription | default: meta.siteDescription -%}

<!-- Url della pagina -->
{% assign pageUrls = meta.url | append: page.url -%}

{% include "head.liquid" %}
<!-- Schema json -->
<script type="application/ld+json">
  {
    "@context": "http://schema.org",
    "@type": "Webpage",
    "url": "{{ pageUrls }}",
    "name": "{{ meta.siteName }}",
    "headline": "{{ pageTitle }}",
    "description": "{{ pageDescription }}",
    "mainEntityOfPage": {
      "@type": "WebPage",
      "@id": "{{ pageUrls }}"
    },
    "publisher": {
      "@type": "Organization",
      "name": "{{ meta.authorName }}",
      "logo": {
        "url": "{{ meta.url }} img/chill-ape.png",
        "width": 1200,
        "height": 900,
        "@type": "ImageObject"
      }
    },
  }
</script>
<!-- Pagefind -->
<script src="/pagefind/pagefind-ui.js" async></script>

<!-- End Head - Page -->